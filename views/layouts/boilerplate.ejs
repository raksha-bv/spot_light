<script>
let isPlaying = false;
const audio = new Audio();
audio.src = "https://res.cloudinary.com/dqdjdjtgm/video/upload/v1711079697/rain_music_bex7ap.mp3";
function toggleAudio() {
    if (isPlaying) {
        audio.pause(); 
    } else {
        audio.play(); 
    }
    isPlaying = !isPlaying; 
}
document.getElementById("music").addEventListener("click", toggleAudio);
</script>
