<%layout('layouts/boilerplate')%>
<div class="row new-edit">
    <h1 class="text-center">New Spot</h1>
    <div class="col-md-6">
        <form action="/spots" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <!-- <input type="file" name="image" multiple> -->
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¹</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="spot[price]" required>
                </div>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="spot[description]"
                    required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input form-control" id="image" name="image" multiple>
                    <label class="form-file-label form-label" for="image">
                        <span class="form-file-text custom-file-label"></span>
                        <span class="form-file-button"></span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn brown-button">Add Spot</button>
            </div>
        </form>
    </div>
    <div class="col-md-6 d-none d-md-block">
        <img src="https://res.cloudinary.com/dqdjdjtgm/image/upload/v1711118327/login_d7ex3c.webp" style="max-width: 100%;height: auto;" alt="">
    </div>
</div>