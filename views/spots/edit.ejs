<%layout('layouts/boilerplate')%>
<body>
    <div class="row new-edit">
        <h1 class="text-center">Edit Spot</h1>
        <div class="col-md-6">
            <form action="/spots/<%=spot._id%>?_method=PUT" method="POST" 
                novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="spot[title]"
                        value="<%=spot.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="spot[location]"
                        value="<%=spot.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <input type="file" name="image" multiple> -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">â‚¹</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="spot[price]" value="<%=spot.price %>"
                            required>
                            <div class="valid-feedback">
                            Looks good!
                        
                            </div>
                    </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="spot[description]"
                        required><%= spot.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn brown-button mb-3"><a href="/spots/<%= spot._id%>" class="link-text">Back To Spot</a></button>
                
            </div>
        
        <div class="col-md-6">
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input form-control" id="image" name="image" multiple>
                    <label class="form-file-label form-label" for="image">
                        <span class="form-file-text custom-file-label"></span>
                        <span class="form-file-button"></span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% spot.images.forEach(function(img, i) {  %>

                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                        value="<%= img.filename %>">
                    <label class="form-check-label" for="image-<%= i %>">Delete ??</label>
                </div>
                <% })%>
            </div>
            <div class="mb-3">
                <button class="btn brown-button">Update Spot</button>
            </div>
        </form>
        

    </div>

</body>
